.page-header
  = link_to new_admin_article_path, class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Article
  %h1 Listing articles

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Name
        %th Body
        %th Date
        %th Category
        %th
        %th
        %th

    %tbody
      - @articles.each do |article|
        %tr
          %td= article.name
          %td= article.body
          %td= article.date
          %td= article.category.name
          %td= link_to 'Show', admin_article_path(article)
          %td= link_to 'Edit', edit_admin_article_path(article)
          %td= link_to 'Destroy', admin_article_path(article), data: { confirm: 'Are you sure?' }, method: :delete
